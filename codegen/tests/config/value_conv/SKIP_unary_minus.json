{
  "$schema": "../schema.json",
  "description": "Unary minus with division",
  "expression": "-$val/256",
  "type": "ValueConv",
  "exiftool_reference": "Common pattern for negative value scaling",
  "test_cases": [
    {
      "description": "Negative scaling of positive value",
      "input": {
        "I32": 512
      },
      "expected": {
        "I32": -2
      }
    },
    {
      "description": "Negative scaling of negative value",
      "input": {
        "I32": -256
      },
      "expected": {
        "I32": 1
      }
    }
  ]
}
