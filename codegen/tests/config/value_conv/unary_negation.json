{
  "$schema": "../schema.json",
  "description": "Unary minus",
  "expression": "-$val",
  "type": "ValueConv",
  "exiftool_reference": "Common pattern for negative value scaling",
  "test_cases": [
    {
      "description": "Handle zero",
      "input": {
        "I32": 0
      },
      "expected": {
        "I32": 0
      }
    },
    {
      "description": "Negate positive value",
      "input": {
        "I32": 512
      },
      "expected": {
        "I32": -512
      }
    },
    {
      "description": "Negate negative value",
      "input": {
        "I32": -256
      },
      "expected": {
        "I32": 256
      }
    }
  ]
}
