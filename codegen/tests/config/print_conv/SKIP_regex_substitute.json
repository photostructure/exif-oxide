{
  "$schema": "../schema.json",
  "description": "Regular expression substitution (migrated from numeric_string_ops.rs)",
  "expression": "s/test/replacement/g",
  "type": "PrintConv",
  "exiftool_reference": "common pattern for string normalization in tag values",
  "test_cases": [
    {
      "description": "Replace all occurrences of 'test'",
      "input": {
        "String": "test string test"
      },
      "expected": {
        "String": "replacement string replacement"
      }
    },
    {
      "description": "No matches to replace",
      "input": {
        "String": "hello world"
      },
      "expected": {
        "String": "hello world"
      }
    }
  ]
}
